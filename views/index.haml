:javascript
  jQuery(document).ready(function() {
    // Carrousel
    //*
    $('#events').cycle({
        fx: 'scrollDown',
        speed:  500,
        timeout: 15000,
        next:   '#next',
        prev:   '#prev'
    });
    //*/

    $('#first').click(function() {
      $('#events').cycle(0);
      return false;
    });

    $('#last').click(function() {
      $('#events').cycle(1);
      return false;
    });

    // Relative times
    jQuery("abbr.timeago").timeago();

    // Autorefresh
    setTimeout( "window.location.reload()", 3600*60*1000 );
    
    // Auto hidden 
    $(".auto-hidden").hide('fast');
    var i = null;
    $("#main-bar").mousemove(function() {
        clearTimeout(i);
        $(".auto-hidden").show('fast');
        i = setTimeout('$(".auto-hidden").hide("fast");', 10000);
    }).mouseleave(function() {
        clearTimeout(i);
        $(".auto-hidden").hide('fast');  
    });
  });

#main-bar
  %h1= "#{@calendar.title}'s meetings"
  %p#menu
    %h3.auto-hidden
      %a#prev{ :href => '#' } &laquo; Prev
      = '~'
      %a#next{ :href => '#' } Next &raquo;
    .auto-hidden
      %em= @events.count
      meetings in total.

#events
  - for event in @events do
    != haml :'_event', :layout => false, :locals => { :event => event }

      