:javascript
  jQuery(document).ready(function() {
    // Carrousel
    //*
    $('#events').cycle({
        fx: 'scrollDown',
        speed:  500,
        timeout: 15000,
        next:   '#next',
        prev:   '#prev'
    });
    //*/

    $('#first').click(function() {
      $('#events').cycle(0);
      return false;
    });

    $('#last').click(function() {
      $('#events').cycle(1);
      return false;
    });

    // Relative times
    jQuery("abbr.timeago").timeago();

    // Autorefresh
    setTimeout( "window.location.reload()", 60*15*1000 );
  });

#main-bar.pos-left
  %h1= "#{@calendar.title}'s meetings"
%p
  %a#first{ :href => '#' } First
  = '/'
  %a#last{ :href => '#' } Last
  = '~'
  %a#prev{ :href => '#' } Prev
  = '/'
  %a#next{ :href => '#' } Next
  = '~'
  = "Total(#{@events.count})"

#events
  - for event in @events do
    != haml :'_event', :layout => false, :locals => { :event => event }